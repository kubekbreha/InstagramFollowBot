<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/activity_login_root_layout"
    tools:context=".LoginActivity">

    <RelativeLayout
        android:id="@+id/activity_login_gradientPart"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignBottom="@+id/activity_login_section"
        android:background="@drawable/main_bottom_gradient"></RelativeLayout>

    <RelativeLayout
        android:id="@+id/activity_login_section"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true">


        <EditText
            android:id="@+id/activity_login_editText_username"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_alignBottom="@id/activity_login_editText_password"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="64dp"
            android:layout_marginEnd="24dp"
            android:layout_marginStart="24dp"
            android:background="@drawable/edit_rounded_light"
            android:ems="10"
            android:hint="Username"
            android:maxLines="1"
            android:paddingStart="12dp"
            android:shadowColor="#ffffff"
            android:singleLine="true"
            android:textColor="#ffffff"
            android:textColorHint="#6e6e6e"
            android:textColorLink="#ffffff" />

        <EditText
            android:id="@+id/activity_login_editText_password"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_alignBottom="@id/activity_login_button_logIn"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="80dp"
            android:layout_marginEnd="24dp"
            android:layout_marginStart="24dp"
            android:background="@drawable/edit_rounded_light"
            android:ems="10"
            android:hint="Passwsord"
            android:inputType="textPassword"
            android:maxLines="1"
            android:paddingStart="12dp"
            android:shadowColor="#ffffff"
            android:singleLine="true"
            android:textColor="#ffffff"
            android:textColorHint="#6e6e6e"
            android:textColorLink="#ffffff" />

        <Button
            android:id="@+id/activity_login_button_logIn"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="24dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="80dp"
            android:background="@drawable/button_rounded_dark"
            android:text="LogIn"
            android:textAllCaps="false" />

    </RelativeLayout>


</RelativeLayout>