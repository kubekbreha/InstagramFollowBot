<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:keepScreenOn="true"
    tools:context="com.kubekbreha.instagrambot.progressActivity.ProgressActivity">

    <com.kubekbreha.instagrambot.progressActivity.ArcProgressStackView
        android:id="@+id/activity_progress_arcProgressStackView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="24dp"
        app:apsv_draw_width="30%"
        app:apsv_indicator_orientation="vertical"
        app:apsv_model_bg_enabled="true"
        app:apsv_model_offset="0dp"
        app:apsv_preview_bg="#ccc"
        app:apsv_preview_colors="@array/default_preview"
        app:apsv_rounded="true"
        app:apsv_start_angle="270"
        app:apsv_sweep_angle="360"
        app:apsv_text_color="#fff"
        app:apsv_typeface="fonts/agency.ttf" />

    <TextView
        android:id="@+id/activity_progress_currentlyInAction_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/activity_progress_arcProgressStackView"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold" />

</RelativeLayout>
