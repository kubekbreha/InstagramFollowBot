<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?colorPrimary"
    tools:context=".loginActivity.LoginActivity">

    <EditText
        android:id="@+id/activity_login_editText_username"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="64dp"
        android:background="@drawable/edit_rounded_dark"
        android:ems="10"
        android:hint="Username"
        android:maxLines="1"
        android:paddingStart="12dp"
        android:shadowColor="#ffffff"
        android:singleLine="true"
        android:textColor="#ffffff"
        android:textColorHint="#6e6e6e"
        android:textColorLink="#ffffff" />

    <EditText
        android:id="@+id/activity_login_editText_password"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/activity_login_editText_username"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="64dp"
        android:background="@drawable/edit_rounded_dark"
        android:ems="10"
        android:hint="Passwsord"
        android:inputType="textPassword"
        android:maxLines="1"
        android:paddingStart="12dp"
        android:shadowColor="#ffffff"
        android:singleLine="true"
        android:textColor="#ffffff"
        android:textColorHint="#6e6e6e"
        android:textColorLink="#ffffff" />

    <Button
        android:id="@+id/activity_login_button_logIn"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignTop="@id/activity_login_editText_password"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="80dp"
        android:background="@drawable/button_rounded_dark"
        android:text="LogIn"
        android:textAllCaps="false" />

</RelativeLayout>